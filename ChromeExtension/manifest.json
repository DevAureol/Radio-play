{
  "manifest_version": 2,

  "name" :"Radio play",
  "description" :"Radio extension",
  "version" :"1.0",
  "browser_action" :
  {
    "default_icon" : "img/radio.png",
    "default_popup" :"popup.html"
  },
  "background": {
    "scripts" : ["scripts/eventPage.js"],
    "persistent" : false
  },
  "commands": {
    "toggle-play-pause": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Toggle Play-Pause"
    }
  },
  "permissions" : [
    "storage"
  ]
}
